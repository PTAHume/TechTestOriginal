@model UserManagement.Web.Models.Users.UserListViewModel

<h2>User List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                 <th>DOB</th>
                <th>Email</th>
                <th>Account Active</th>
                 <th style="width: 1px;"></th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                     <td>
                        @item.DateOfBirth?.ToString("dd-MMM-yyyy")
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                     <td>
                       <div>
                            <a asp-controller="Logs" class="btn btn-secondary"  asp-action="List" asp-route-filter="@item.Id">Logs</a>
                       </div>
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a> </li>
                                <li><a class="dropdown-item"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> </li>
                                <li><a class="dropdown-item"  asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="Users" asp-action="List" asp-route-filter="1"  class="btn btn-default">Active Only</a>
        <a asp-controller="Users" asp-action="List" asp-route-filter="0"  class="btn btn-default">Non Active</a>
    </div>

    <a asp-controller="Users" asp-action="Create" class="btn btn-primary float-end">Add User</a>
  
</div>

